{
    "name": "ddd/php-project",
    "description": "A PHP project using Domain-Driven Design principles",
    "type": "project",
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0",
        "symfony/yaml": "^6.0",
        "ramsey/uuid": "^4.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
} 